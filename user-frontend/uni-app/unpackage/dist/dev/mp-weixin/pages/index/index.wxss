/* 让整个页面充满屏幕 */
#app {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 60px; /* 避免底部操作栏遮挡内容 */
}

/* 底部操作栏固定在底部 */



/* 顶部导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  padding: 10px 15px;
  background-color: #f8f9fa;
  border-bottom: 1px solid #ddd;
}
.logo {
  width: 30px;
  height: 30px;
  margin-right: 10px;
}
.title {
  font-size: 18px;
  font-weight: bold;
}

/* 地图区域 */
#map {
  flex: 1;
  width: 100%;
  background-color: #e0e0e0;
  height:1000px;/* 仅用于占位，实际开发中用地图 */
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10px 0;
  background-color: #f8f9fa;
  border-top: 1px solid #ddd;
}

/* 按钮样式 */
.btn {
  flex: 1;
  padding: 10px;
  margin: 0 5px;
  text-align: center;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
  background-color: #6c757d;
  color: white;
}

/* 主要按钮 */
.btn.primary {
  background-color: #007bff;
}

/* 按钮悬停效果 */
.btn:hover {
  opacity: 0.8;
}
